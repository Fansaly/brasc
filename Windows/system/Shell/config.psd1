@{

RegPath = 'HKCU:\Console'

# Command Prompt and PowerShell settings
Console = @{
  FaceName = 'Microsoft YaHei Mono'
  FontSize = 20
  WindowSize = @{
    width = 120
    height = 32
  }
  WindowAlpha = 90
}

# PowerShell ISE settings
PowerShellISE = @{
  ShowScriptOnFirstRunspace = 'True'
  MainWindowMaximized = 'True'
  ShowLineNumbers = 'True'
  FontName = 'Microsoft YaHei Mono'
  FontSize = 12
}

}
