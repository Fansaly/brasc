root = true

[*]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{.editorconfig,.gitignore,/*.sh,macos/*,Ubuntu/*,Unix/*}]
charset = utf-8
end_of_line = lf

[*.{bat,md}]
trim_trailing_whitespace = false

[{/*.bat,Windows/*}]
end_of_line = crlf

[*.bat]
insert_final_newline = false
